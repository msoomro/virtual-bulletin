<h1>Edit Post</h1>

<form action="/boards/<%= @board.id %>/posts/<%= @post.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="title">New Post: </label>
    <input type="text" id="title" placeholder="Title" name="post[title]" value="<%= @post.title %>"><br>
    <label for="content"> </label><br>
    <textarea id="content" placeholder="This post is about..." name="post[content]" rows="3" cols="50"><%= @post.content %></textarea><br>
    <button type="submit">Submit Changes</button>
    <a href="/boards/<%= @board.id %>">Cancel</a>
</form>
